<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:id="@+id/list">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerOne">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Player A: 20 Lives"
                android:id="@+id/oneString"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="7pt"
                android:paddingBottom="3pt">
                <Button
                    android:id="@+id/playOnePlusOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="+"
                    android:onClick="button"/>
                <Button
                    android:id="@+id/playOneMinusOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="-"
                    android:onClick="button"/>
                <Button
                    android:id="@+id/playOnePlusFive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="+5"
                    android:onClick="button"/>
                <Button
                    android:id="@+id/playOneMinusFive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="-5"
                    android:onClick="button"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerTwo">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Player B: 20 Lives"
                android:paddingBottom="20pt"
                android:id="@+id/twoString"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="7pt"
                android:paddingBottom="3pt">
                <Button
                    android:id="@+id/playTwoPlusOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="+"
                    android:onClick="button"/>
                <Button
                    android:id="@+id/playTwoMinusOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="-"
                    android:onClick="button"/>
                <Button
                    android:id="@+id/playTwoPlusFive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="+5"
                    android:onClick="button"/>
                <Button
                    android:id="@+id/playTwoMinusFive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="-5"
                    android:onClick="button"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerThree">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Player C: 20 Lives"
                android:id="@+id/threeString" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="7pt"
                android:paddingBottom="3pt">
                <Button
                    android:id="@+id/playThreePlusOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="+"
                    android:onClick="button"/>
                <Button
                    android:id="@+id/playThreeMinusOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="-"
                    android:onClick="button"/>
                <Button
                    android:id="@+id/playThreePlusFive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="+5"
                    android:onClick="button"/>
                <Button
                    android:id="@+id/playThreeMinusFive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="-5"
                    android:onClick="button"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerFour">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Player D: 20 Lives"
                android:id="@+id/fourString" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="7pt"
                android:paddingBottom="3pt">
                <Button
                    android:id="@+id/playFourPlusOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="+"
                    android:onClick="button"/>
                <Button
                    android:id="@+id/playFourMinusOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="-"
                    android:onClick="button"/>
                <Button
                    android:id="@+id/playFourPlusFive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="+5"
                    android:onClick="button"/>
                <Button
                    android:id="@+id/playFourMinusFive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="-5"
                    android:onClick="button"/>
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/loser"/>
    </LinearLayout>
</RelativeLayout>